{
	"name": "api",
	"version": "1.0.0",
	"main": "index.js",
	"license": "MIT",
	"scripts": {
		"dev": "tsx watch src/index.ts",
		"build": "tsup src --out-dir build",
		"start": "node dist/index.js",
		"lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --fix",
		"format": "prettier --write src",
		"format:all": "pnpm lint && pnpm format",
		"migrate": "drizzle-kit generate:pg",
		"migrate:run": "pnpm tsx src/config/db/migrate.ts"
	},
	"dependencies": {
		"@paralleldrive/cuid2": "2.2.2",
		"chalk": "5.3.0",
		"drizzle-orm": "0.29.3",
		"multer": "1.4.5-lts.1",
		"pg": "8.11.3",
		"socket.io": "4.7.2",
		"zennv": "0.1.1",
		"zod": "3.22.4",
		"fastify": "4.26.0",
		"pino": "8.17.2"
	},
	"devDependencies": {
		"tsup": "8.0.1",
		"pino-pretty": "10.3.1",
		"tsx": "4.6.2",
		"@types/express": "4.17.21",
		"@types/multer": "1.4.10",
		"@types/node": "20.11.14",
		"@types/pg": "8.11.0",
		"@typescript-eslint/eslint-plugin": "6.11.0",
		"@typescript-eslint/parser": "6.11.0",
		"drizzle-kit": "0.20.9",
		"eslint": "8.54.0",
		"eslint-config-prettier": "9.0.0",
		"eslint-plugin-import-helpers": "1.3.1",
		"eslint-plugin-prettier": "5.0.1",
		"prettier": "3.1.0",
		"typescript": "5.2.2"
	}
}
